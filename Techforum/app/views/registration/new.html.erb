<%= form_tag(emp_login_registration_url, :method => 'post') %>
<sup align='center'></sup>
<table align='center' cellspacing='10px' cellpadding='5px' border='0px'>
<tr><td>Name:</td><td><%= text_field(:emp_master, :name, :autofocus => true) %></td></tr>
<tr><td>TCS Id:</td><td><%= text_field(:emp_master, :tcs_id) %></td></tr>
<tr><td>FM No:</td><td><%= text_field(:emp_master, :fm_no) %></td></tr>
<tr><td>Technology:</td><td>
<!--<select id='emp_master_tech' name='emp_master[tech]'>
<option value='0'>Select</option>
