<tr><td>Birthday:</td><td><input type='text' class='datepicker' name='emp_master[birthday]' readonly='readonly' /></td></tr>
<tr><td>Date Of Joining:</td><td><input type='text' class='datepicker' name='emp_master[doj]' readonly='readonly' /></td></tr>
<tr><td>Date Of Release:</td><td><input type='text' class='datepicker' name='emp_master[dor]' readonly='readonly' /></td></tr>
<tr><td>Email:</td><td><%= email_field(:emp_login, :email) %></td</tr>
<tr><td>Password:</td><td><%= password_field(:emp_login, :password) %></td</tr>
<tr><td>Confirm Password:</td><td><%= password_field(:emp_login, :password_confirmation) %></td</tr>
<tr><td>Role:</td><td>
